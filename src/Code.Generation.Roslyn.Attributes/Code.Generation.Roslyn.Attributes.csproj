<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Description>Provides the attributed hooks for purposes of invoking Code Generation.</Description>
    <Version>1.0.0.4510</Version>
    <AssemblyVersion>1.0.0.4510</AssemblyVersion>
    <FileVersion>1.0.0.4510</FileVersion>
    <PackageVersion>1.0.0.4510</PackageVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Platform)'=='AnyCPU'">
    <DocumentationFile>bin\$(Configuration)\netstandard2.0\Code.Generation.Roslyn.Attributes.xml</DocumentationFile>
  </PropertyGroup>

</Project>
